<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="homeautomation.capstone.com.homeautomation">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SettingsActivity"
            android:label="@string/title_activity_settings"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".DevicesActivity"
            android:label="@string/title_activity_devices"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Devices.Door"
            android:label="@string/title_activity_door"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Devices.Light"
            android:label="@string/title_activity_light"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Devices.Camera"
            android:label="@string/title_activity_camera"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".DoorPickerActivity"
            android:label="@string/title_activity_door_picker"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".LightPickerActivity"
            android:label="@string/title_activity_light_picker"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".CameraPickerActivity"
            android:label="@string/title_activity_camera_picker"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".RegisterActivity"
            android:label="@string/title_activity_register"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".TemperatureActivity"
            android:label="@string/title_activity_temperature"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>